@products.map do |product|
  {
    id: product.id,
    name: product.name, 
    price: product.price,
    image_url: product.image_url,
    description: product.description,
    is_discounted?: product.is_discounted?,
    friendly_created_at: product.friendly_created_at,
    supplier: product.supplier,
  }
end
